{
  "openapi": "3.0.1",
  "info": {
    "title": "API Service",
    "version": "1.0.0",
    "description": "API Service endpoints",
    "contact": {
      "email": "debra@gmail.com",
      "name": "debra"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000/"
    }
  ],
  "tags": [
    {
      "name": "videogame",
      "description": "Videogames APIs"
    }
  ],
  "paths": {
    "/videogame/add": {
      "post": {
        "tags": [
          "videogame"
        ],
        "summary": "Add a videogame to the database",
        "operationId": "videogame-add",
        "requestBody": {
          "description": "New user signing up",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/DraftVideogameSchema"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Videogame was added",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DraftVideogameSchema"
                }
              }
            }
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/videogame/all": {
      "get": {
        "tags": [
          "videogame"
        ],
        "summary": "Get all videogames in database",
        "operationId": "videogame-get-all",
        "responses": {
          "200": {
            "description": "Search results",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "videogames": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/VideogameSchema"
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/videogame/search": {
      "get": {
        "tags": [
          "videogame"
        ],
        "summary": "Search videogames by name or author",
        "operationId": "videogame-search",
        "parameters": [
          {
            "in": "query",
            "name": "name",
            "schema": {
              "type": "string",
              "default": "hitchhiker"
            },
            "description": "String containing full name or partial name of the videogame"
          },
          {
            "in": "query",
            "name": "author",
            "schema": {
              "type": "string",
              "default": "douglas"
            },
            "description": "String containing full name or partial name of the author"
          }
        ],
        "responses": {
          "200": {
            "description": "Search results",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "videogames": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/VideogameSchema"
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "DraftVideogameSchema": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "The Hitchhiker's Guide to the Galaxy"
          },
          "author": {
            "type": "string",
            "example": "Douglas Adams"
          }
        }
      },
      "VideogameSchema": {
        "allOf": [
          {
            "$ref": "#/components/schemas/DraftVideogameSchema"
          }
        ],
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "example": "5d7224d3b40b1a1a046697dd"
          }
        }
      }
    }
  }
}